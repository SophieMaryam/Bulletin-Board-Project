doctype 
html
	head
		title Bulletin Board
		link(rel="stylesheet", href="./main.css", type="text/css")
		link(href="https://fonts.googleapis.com/css?family=Homemade+Apple|La+Belle+Aurore" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css?family=Special+Elite" rel="stylesheet")
	body#homebody
		div.background
			a(href="./allmessages")
					button.button1(type=button) All Messages
				
			h1#heading Leave your message 
			form(name="form", method="post", action="/messages")
				input(type="text" id="title" name="name" placeholder="Title" required)
				textarea(id="textspace", name="body", placeholder="My thoughts...", rows="100", columns="100" required)
				input(id="submit" type="submit", value="Submit") 

				h1#ending Sincerely, yours truly

